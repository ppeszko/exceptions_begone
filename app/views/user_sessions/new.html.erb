<div id="box">
  <div class="block" id="block-login">
    <h2>Login Box</h2>
    <div class="content login">
      <% form_for @user_session, :html => {:class => "form login"} do |f| %>
        <div class="group">
          <div class="left">
            <%= f.label :username, "Login", :class => "label right" %>
          </div>
          <div class="right">
            <%= f.text_field :username, :class => "text_field" %>
            <%= error_message_on :user_session, :username %>
          </div>
          <div class="clear"></div>
        </div>
        <div class="group">
          <div class="left">
            <%= f.label :password, "Password", :class => "label right" %>
          </div>
          <div class="right">
            <%= f.password_field :password, :class => "text_field" %>
            <%= error_message_on :user_session, :password %>
          </div>
          <div class="clear"></div>
        </div>
        <div class="group">
          <div class="left">
            <%= f.label :remember_me, "Remember?", :class => "label right" %>
          </div>
          <div class="right">
            <%= f.check_box :remember_me, {:class => "check_box"} %>
          </div>
          <div class="clear"></div>
        </div>
        <div class="group navform">
          <div class="right">
            <%= f.submit "Login", :class => "button" %>
          </div>
          <div class="clear"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>